@model Dont_Panic_MVC_API.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<br />
<div class="container drop-shadow-lite rounded-corners">
    <h3 class="centertext">Create a new account.</h3>
    <hr />
    @using (Html.BeginForm("Signup", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal container-form">


            <div class="form-group">

                @Html.LabelFor(m => m.first_name, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.first_name, new { @class = "form-control", @placeholder = "First name" })
                </div>

                <div class="col-md-offset-2 col-md-10">
                    @Html.ValidationMessageFor(m => m.first_name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.last_name, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.last_name, new { @class = "form-control col-md-10", @placeholder = "Last name" })
                </div>
                <div class="col-md-offset-2 col-md-10">
                    @Html.ValidationMessageFor(m => m.last_name)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Display name" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "Email" })
                </div>
                <div class="col-md-offset-2 col-md-10">
                    @Html.ValidationMessageFor(m => m.email)
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                </div>
                <div class="col-md-offset-2 col-md-10">
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Re-enter Password" })
                </div>
                <div class="col-md-offset-2 col-md-10">
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-success" value="Sign up" />
                </div>
            </div>
        </div>
    }



</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
