@{
    ViewBag.Title = "PurchaseTokens";
}

<br />
<div class="container layer-purchasetoken">
    <h2 class="centertext"><font color="#65B5A2">purchase</font> tokens</h2>
    <hr />
    <div class="layer-content">
        <p class="centertext">Here you can buy bundles of lead tokens! Lead tokens are used to buy leads from the purchase job page. You can also buy jobs individually but it saves you at least 15% to buy tokens in advanced. To purchase lead tokens please select a bundle below.</p>
        <br />
        <div class="row">
            <div class="col-md-4">
                <div class="layer-token drop-shadow ">
                    <img src="~/images/5.png" class="img-responsive" />
                    <h2>$10</h2>
                    <p> </p>
                    @using (Html.BeginForm("PurchaseTokens", "Account", FormMethod.Post))
                    {
                        @Html.Hidden("selection", 1);
                        <button type="submit" onclick="return confirm('Are you sure you want to purchase 3 tokens for $5?')" class="btn-dontpanic" value="Purchase">Purchase</button>
                    }
                    <br />
                </div>
            </div>
            <div class="col-md-4">
                <div class="layer-token drop-shadow ">
                    <img src="~/images/10.png" class="img-token img-responsive" />
                    <h2>$17</h2>
                    <p>Save 15%!</p>
                    @using (Html.BeginForm("PurchaseTokens", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("selection", 2);
                        <button type="submit" onclick="return confirm('Are you sure you want to purchase 7 tokens for $10?')" class="btn-dontpanic" value="Purchase">Purchase</button>
                    }
                    <br />
                </div>
            </div>
            <div class="col-md-4">
                <div class="layer-token drop-shadow">
                    <img src="~/images/15.png" class="img-token img-responsive" />
                    <h2>$24</h2>
                    <p>Save 20%!</p>
                    @using (Html.BeginForm("PurchaseTokens", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @Html.Hidden("selection", 3);
                        <button type="submit" onclick="return confirm('Are you sure you want to purchase 12 tokens for $15?')" class="btn-dontpanic" value="Purchase">Purchase</button>
                    }
                    <br />
                </div>
            </div>

        </div>
    </div>
    <hr />
</div>
