        </div>
        <div class="item">
            <img src="~/Images/Mitchplaceholder.jpg" />
            <div class="carousel-caption">
                mitch place holder. Blah blah blah blah more blah and more blah blah bleh blah bleh blah blehhh
            </div>
        </div>
        <div class="item">
            <img src="~/Images/Zachholdplace.jpg" />
            <div class="carousel-caption">
                hong place holder
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#dontpaniccarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#dontpaniccarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>

