
@{
    Layout = null;
}

<!DOCTYPE html>

<link rel="icon" type="img/png" href="~/Images/Favicon3.png">
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    @Styles.Render("~/Content/css")
    <title>Good Job</title>
</head>
<body>

    <link href="~/Content/dontpanic.css" rel="stylesheet">
@model Dont_Panic_MVC_API.Models.ProtectLoginModel

@{
    ViewBag.Title = "Login";

}
<div class="container rounded-corners">
    <h2 class="centertext">This site has been locked. Enter the password to unlock it.</h2>
    <hr />
    <div class="form-horizontal container-form">
        <section id="loginForm">
            @using (Html.BeginForm("Protect", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="form-group">
                    <div class="login-buttons">
                        <div class="login-dontpanic">
                            <input type="submit" value="Unlock" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
</div>

</body>
</html>

