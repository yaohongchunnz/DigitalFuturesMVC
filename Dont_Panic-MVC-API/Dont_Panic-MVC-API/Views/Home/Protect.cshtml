
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Protect</title>
</head>
<body>
@model Dont_Panic_MVC_API.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}


<br />
<div class="container rounded-corners">
    <h2 class="centertext">log in</h2>
    <hr />
    <div class="form-horizontal container-form">
        <section id="loginForm">
            @using (Html.BeginForm("Protect", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="form-group">
                    <div class="login-buttons">
                        <div class="login-dontpanic">
                            <input type="submit" value="Log in" class="btn-sm" />
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
</div>

</body>
</html>

