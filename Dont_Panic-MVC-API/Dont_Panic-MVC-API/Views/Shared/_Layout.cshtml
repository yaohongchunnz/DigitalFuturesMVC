<!DOCTYPE html>
@{var atJobPage = false;}
@if (@Url.Action().ToLower().Contains("job"))
{
    atJobPage = true;
}
else
{
    atJobPage = false;
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Don't Panic</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Add custom CSS here -->
    <link href="~/Content/simple-sidebar.css" rel="stylesheet">
    <link href="~/Content/dontpanic.css" rel="stylesheet">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top drop-shadow green-border">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><font color="#65B5A2">don't</font><font color="#424242">panic</font></a>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li @if (@ViewContext.RouteData.GetRequiredString("controller").ToLower() == "job") { @Html.AttributeEncode("class=active")            ; }>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink("Jobs", "Index", "Job")
                        }
                        else
                        {
                            @Html.ActionLink("post job", "Create", "Job")
                        }

                    </li>
                   

                    <!---Current job, previous job, post job-->
                        @Html.ActionLink("current jobs", "Index", "Job")
                        @Html.ActionLink("previous jobs", "Index", "Job")
                        @Html.ActionLink("post job", "Create", "Job")
                   
                    <!---Current job, previous job, browse job-->
                        @Html.ActionLink("current jobs", "Index", "Job")
                        @Html.ActionLink("previous jobs", "Index", "Job")
                        @Html.ActionLink("browse jobs", "Create", "Job")

                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    @if (User.Identity.IsAuthenticated && atJobPage)
    {
        <div class="container">
            <section class="navbar navbar-default ">

                <ul class="nav nav-tabs navbar-nav">

                    <li @if (@ViewContext.RouteData.GetRequiredString("action").ToLower() == "index") { @Html.AttributeEncode("class=active")           ; }>
                        <a href="/Job/Index">Your jobs</a>
                    </li>
                    <li @if (@ViewContext.RouteData.GetRequiredString("action").ToLower() == "create") { @Html.AttributeEncode("class=active")           ; }>
                        <a href="/Job/Create">Post a job</a>
                    </li>
                    <li @if (@ViewContext.RouteData.GetRequiredString("action").ToLower() == "browse") { @Html.AttributeEncode("class=active")           ; }>
                        <a href="/Job/Browse">Browse jobs</a>
                    </li>
                    <li @if (@ViewContext.RouteData.GetRequiredString("action").ToLower() == "settings") { @Html.AttributeEncode("class=active")            ; }>
                        <a href="#">Settings</a>
                    </li>
                </ul>

            </section>
            @RenderBody()

            <hr />
        </div>
    }
    else
    {
        if (@Url.Action().Equals("/") || @Url.Action().ToLower().Equals("/home/index"))
        {
            @RenderBody()
        }
        <div class="contentBackground body-content">
            @try
            {
                @RenderBody()
                <br />
            }
            catch (Exception e)
            {

            }
        </div>


    }

    <br />
    <div class="supportBar">
        <p>
            <a href="/Home/About">About</a> | <a href="/Home/Contact">Contact</a> | <a href="/Home/Support">Support</a>

        </p>
    </div>
    <div class="footerBar">
        <footer>
            <p>&copy; @DateTime.Now.Year - Rarespawn</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)




</body>
</html>
