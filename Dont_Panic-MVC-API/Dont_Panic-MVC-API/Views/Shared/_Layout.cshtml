<!DOCTYPE html>
@{var atJobPage = false;}
@if (@Url.Action().ToLower().Contains("job"))
{
    atJobPage = true;
}
else
{
    atJobPage = false;
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Don't Panic</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Add custom CSS here -->
    <link href="~/Content/simple-sidebar.css" rel="stylesheet">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top drop-shadow green-border">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"> <img src="http://imagizer.imageshack.us/v2/100x75q90/18/ojy6.png"></a>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li @if (@ViewContext.RouteData.GetRequiredString("controller").ToLower() == "home") { @Html.AttributeEncode("class=active")    ; }>
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li @if (@ViewContext.RouteData.GetRequiredString("controller").ToLower() == "job") { @Html.AttributeEncode("class=active")     ; }>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink("Jobs", "Index", "Job")
                        }
                        else
                        {
                            @Html.ActionLink("Jobs", "Browse", "Job")
                        }

                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    @if (User.Identity.IsAuthenticated && atJobPage)
    {
        <div class="container">
            <section class="navbar navbar-default ">

                <ul class="nav nav-tabs navbar-nav">

                    <li @if (@ViewContext.RouteData.GetRequiredString("action").ToLower() == "index") { @Html.AttributeEncode("class=active")    ; }>
                        <a href="/Job/Index">Your jobs</a>
                    </li>
                    <li @if (@ViewContext.RouteData.GetRequiredString("action").ToLower() == "create") { @Html.AttributeEncode("class=active")    ; }>
                        <a href="/Job/Create">Post a job</a>
                    </li>
                    <li @if (@ViewContext.RouteData.GetRequiredString("action").ToLower() == "browse") { @Html.AttributeEncode("class=active")    ; }>
                        <a href="/Job/Browse">Browse jobs</a>
                    </li>
                    <li @if (@ViewContext.RouteData.GetRequiredString("action").ToLower() == "settings") { @Html.AttributeEncode("class=active")     ; }>
                        <a href="#">Settings</a>
                    </li>
                </ul>

            </section>
            @RenderBody()

            <hr />
            <div class="container">
                <table class=" table-striped">
                    <tbody>
                        <tr>
                            <td>
                                <a href="/Home/About"><h4>About</h4></a>
                            </td>
                            <td>
                                <h4> | </h4>
                            </td>
                            <td>
                                <a href="/Home/Contact"><h4>Contact</h4></a>
                            </td>
                            <td>
                                <h4> | </h4>
                            </td>
                            <td>
                                <a href="/Home/Support"><h4>Support</h4></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <hr />
            <div class="container">
                <footer>
                    <p>&copy; @DateTime.Now.Year - Rarespawn</p>
                </footer>
            </div>
        </div>
    }
    else
    {
        if (@Url.Action().Equals("/") || @Url.Action().ToLower().Equals("/home/index"))
        {
            @RenderBody()
        }
        <div class="container body-content">
            @try
            {
                @RenderBody()
            }
            catch (Exception e)
            {

            }
        </div>

        <hr />
        <div class="container table-responsive">
            <table class="table-condensed">
                <tbody>
                    <tr>
                        <td>
                            <a href="/Home/About"><h4>About</h4></a>
                        </td>
                        <td>
                            <h4> | </h4>
                        </td>
                        <td>
                            <a href="/Home/Contact"><h4>Contact</h4></a>
                        </td>
                        <td>
                            <h4> | </h4>
                        </td>
                        <td>
                            <a href="/Home/Support"><h4>Support</h4></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <hr />
        <div class="container">
            <footer>
                <p>&copy; @DateTime.Now.Year - Rarespawn</p>
            </footer>
        </div>

    }



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    


</body>
</html>
