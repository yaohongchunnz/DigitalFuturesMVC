@model IEnumerable<Dont_Panic_MVC_API.Models.ServiceProviderDetails>

@{
    ViewBag.Title = "InterestedPros";
}


<br />
<div class="container drop-shadow browse-jobs-block">
    <h3 class="centertext"><font color="#65B5A2">interested</font> pros</h3>
    <br />
    @{
        if (Model.Count() == 0)
        {
            <p>
                There are no interested pros at the moment.
            </p>
        }

    }

    @foreach (var item in Model)
    {
        <div class="row job-block drop-shadow-lite">
            <br />
            <div class="col-md-3"><a href="@item.website_address"><img src="~/Images/nophotoavailable.jpg" class="img-rounded drop-shadow-lite img-responsive" width="200" height="200" /></a></div>


            <div class="col-md-9">
                <p>
                    <a href="@item.website_address" class="job-block-title">@item.business_name</a><br />
                    @item.description
                </p>

                <div class="row">
                    <div class="job-block-detail-left col-md-6">
                        <p class="text-primary" style="font-size:12px">
                            Business: @item.business_name<br />Contact name: @item.contact_name
                            <br />Contact Number: @item.contact_number_1
                        </p>
                    </div>
                    <div class="job-block-detail-right col-md-6">
                        <input type="button" value="Hire Pro" class="btn-dontpanic" />
                    </div>
                </div>
            </div>
        </div>
        <br />
    }



</div>