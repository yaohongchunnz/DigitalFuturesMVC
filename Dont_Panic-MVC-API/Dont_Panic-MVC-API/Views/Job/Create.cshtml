@model Dont_Panic_MVC_API.Models.API_Models.Job

@{
    ViewBag.Title = "Create Job";
}
<div class="container">
        <h2>Create your job</h2>
    <br />
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Closest relevant service providers will be notified as soon as you create your job!</h4>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.title, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.title)
                        @Html.ValidationMessageFor(model => model.title)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.description, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.description)
                        @Html.ValidationMessageFor(model => model.description)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.city, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.city)
                        @Html.ValidationMessageFor(model => model.city)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.jobtype, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.jobtype)
                        @Html.ValidationMessageFor(model => model.jobtype)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to your jobs", "Index")
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
