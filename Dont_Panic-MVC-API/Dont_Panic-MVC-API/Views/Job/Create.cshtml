@model Dont_Panic_MVC_API.Models.API_Models.Job

@{
    ViewBag.Title = "Create Job";
}
<div class="container drop-shadow-lite rounded-corners">
    <h2><font color="#65B5A2">post</font> job</h2>
    <br />
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
                <div class="form-horizontal" role="form">
                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">title</label>
                        <div class="col-sm-10">
                            <input name="title" required id="title" placeholder="Title of job" class="form-control" type="text" />
                        </div>
                    </div>

                    <div class="form-group">

                        <label for="description" class="col-sm-2 control-label">description</label>
                        <div class="col-md-10">
                            <textarea rows="3" name="description" required id="description" class="form-control"> </textarea>
                        </div>
                    </div>

                    <div class="form-group">

                        <label for="city" class="col-sm-2 control-label">city</label>
                        <div class="col-sm-10">
                            <select class="form-control" required id="city" name="city">
                                <option>Wellington</option>
                                <option>Auckland</option>
                                <option>Hamilton</option>
                                <option>Christchurch</option>
                            </select>
                        </div>

                    </div>

                    <div class="form-group">
                        <label for="jobtype" class="col-sm-2 control-label">category</label>
                        <div class="col-sm-10">
                            <select class="form-control" required id="jobtype" name="jobtype">
                                <option>Plumbing</option>
                                <option>Electrical</option>
                            </select>
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </div>
                </div>
        }

        <div>
            @Html.ActionLink("Back to your jobs", "Index")
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
